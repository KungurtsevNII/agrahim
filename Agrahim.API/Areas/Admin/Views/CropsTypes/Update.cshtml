@model Agrahim.Common.ViewModels.CropsType.UpdateCropsTypeViewModel
@{
    ViewBag.Title = "Редактирование";
    Layout = "_Layout";
}

<div class="row justify-content-center">
    <div class="col-8">
        <h2>@ViewBag.Title</h2>
        <form method="post" asp-area="Admin" asp-controller="CropsTypes" asp-action="Update">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="Name" for="nameInput"></label><br/>
                <input asp-for="Name" id="nameInput" class="form-control"/>
                <span asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="CoefficientN" for="CoefficientN"></label><br/>
                <input asp-for="CoefficientN" id="CoefficientN" class="form-control"/>
                <span asp-validation-for="CoefficientN"></span>
            </div>
            <div class="form-group">
                <label asp-for="CoefficientP" for="CoefficientP"></label><br/>
                <input asp-for="CoefficientP" id="CoefficientP" class="form-control"/>
                <span asp-validation-for="CoefficientP"></span>
            </div>
            <div class="form-group">
                <label asp-for="CoefficientK" for="CoefficientK"></label><br/>
                <input asp-for="CoefficientK" id="CoefficientK" class="form-control"/>
                <span asp-validation-for="CoefficientK"></span>
            </div>
            <div class="form-check">
                <input asp-for="IsRemoved" type="checkbox" class="form-check-input" id="isRemoved">
                <label asp-for="IsRemoved" class="form-check-label" for="isRemoved">Удален</label>
                <span asp-validation-for="IsRemoved"></span>
            </div>
            <input class="btn btn-success" type="submit" value="Обновить"/>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@section Css
{
    @{
        await Html.RenderPartialAsync("_ValidationCssPartial");
    }
}